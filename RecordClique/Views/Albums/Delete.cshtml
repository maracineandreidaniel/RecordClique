@model RecordClique.Models.Album

@{
    ViewData["Title"] = "Delete Album";
}

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/Albums/Albums_Delete.css" />
</head>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card artist-delete-card">
                <div class="card-header text-center text-white bg-danger">
                    <h1>Delete Confirmation for @Model.AlbumName</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Delete">
                        <div class="form-group text-center">
                            <img class="artist-picture rounded-circle" id="AlbumCoverPreview" />
                        </div>

                        <div class="form-group">
                            <label asp-for="AlbumCoverURL" class="control-label"></label>
                            <input asp-for="AlbumCoverURL" class="form-control" id="AlbumCoverURL" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="AlbumName" class="control-label"></label>
                            <input asp-for="AlbumName" class="form-control" id="AlbumName" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="AlbumDescription" class="control-label"></label>
                            <textarea asp-for="AlbumDescription" class="form-control" id="AlbumDescription" readonly></textarea>
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <input type="submit" value="Confirm Delete" class="btn btn-outline-danger float-right" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('AlbumCoverPreview');
            output.src = $("#AlbumCoverURL").val();
        });
    </script>
}
