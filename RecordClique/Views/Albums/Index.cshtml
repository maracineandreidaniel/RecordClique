@model IEnumerable<RecordClique.Models.Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.Identity.IsAuthenticated && User.IsInRole("User") )
{
    <p>
        <a asp-action="Create">Create NewU</a>
    </p>
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create NewA</a>
    </p>
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Doctor"))
{
    <p>
        <a asp-action="Create">Create NewA</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlbumName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumCoverURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumCoverURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label.LabelName)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Artist.ArtistBio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
