@using RecordClique.Data.Extensions;
@model IEnumerable<RecordClique.Models.NewsFeedLog>

<h1>News Feed</h1>

<table class="table">
    <thead>
        <tr class="text-center">
            <th>User</th>
            <th>Action</th>
            <th>Friend</th>
            <th>Album</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@item.DisplayAction()</td>
                    <td>@Html.DisplayFor(modelItem => item.Friend)</td>
                    <td>@Html.DisplayFor(modelItem => item.Album)</td>
                </tr>
        }
    </tbody>
</table>
