@model Label

@{
    ViewData["Title"] = "Add a new label";
}

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/Labels/Labels_Create.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Carter+One&display=swap" rel="stylesheet">
</head>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card create-label-card">
                <div class="card-header text-center text-white bg-success">
                    <h1>Add a New Label</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="form-group text-center">
                            <img class="label-picture rounded-circle" id="ProfilePicturePreview" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ProfilePictureURL" class="control-label"></label>
                            <input asp-for="ProfilePictureURL" class="form-control" id="ProfilePictureURL" />
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LabelName" class="control-label"></label>
                            <input asp-for="LabelName" class="form-control" id="LabelName" />
                            <span asp-validation-for="LabelName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LabelBio" class="control-label"></label>
                            <textarea asp-for="LabelBio" class="form-control" id="LabelBio"></textarea>
                            <span asp-validation-for="LabelBio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-outline-success float-right submit-btn" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            updateImagePreview();

            $("#ProfilePictureURL").on("change", function () {
                updateImagePreview();
            })
        });

        function updateImagePreview() {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        }
    </script>
}
