@model Label

@{
    ViewData["Title"] = "Delete label";
}

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/Labels/Labels_Delete.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Carter+One&display=swap" rel="stylesheet">
</head>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card delete-label-card">
                <div class="card-header text-center text-white bg-danger">
                    <h1>Delete Confirmation for @Model.LabelName</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Delete">
                        <div class="form-group text-center">
                            <img class="label-picture rounded-circle" id="ProfilePicturePreview" src="@Model.ProfilePictureURL" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ProfilePictureURL" class="control-label"></label>
                            <input asp-for="ProfilePictureURL" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="LabelName" class="control-label"></label>
                            <input asp-for="LabelName" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="LabelBio" class="control-label"></label>
                            <textarea asp-for="LabelBio" class="form-control" readonly></textarea>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirm" class="btn btn-outline-danger float-right submit-btn" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
