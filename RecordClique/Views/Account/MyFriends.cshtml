@model IEnumerable<RecordClique.Models.ApplicationUser>

<h1>My Friends</h1>

<table class="table">
    <thead>
        <tr class="text-center">
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <form asp-controller="Friend" asp-action="RemoveFriend" method="post">
                        <input type="hidden" name="friendId" value="@item.Id">
                        <button type="submit">Remove Friend</button>
                    </form>                       
                    <form asp-controller="Account" asp-action="FriendsAlbums" method="get">
                        <input type="hidden" name="friendId" value="@item.Id">
                        <button type="submit">View Albums</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
